{
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "entity": [
                        {
                            "type": "checkbox", 
                            "label": "Enable", 
                            "field": "proxy_enabled"
                        }, 
                        {
                            "type": "singleSelect", 
                            "label": "Proxy Type", 
                            "defaultValue": "http", 
                            "field": "proxy_type", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "value": "http", 
                                        "label": "http"
                                    }, 
                                    {
                                        "value": "socks4", 
                                        "label": "socks4"
                                    }, 
                                    {
                                        "value": "socks5", 
                                        "label": "socks5"
                                    }
                                ], 
                                "disableSearch": true
                            }
                        }, 
                        {
                            "type": "text", 
                            "label": "Host", 
                            "field": "proxy_url", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "maxLength": 4096, 
                                    "errorMsg": "Max host length is 4096", 
                                    "minLength": 0
                                }
                            ]
                        }, 
                        {
                            "type": "text", 
                            "label": "Port", 
                            "field": "proxy_port", 
                            "validators": [
                                {
                                    "type": "number", 
                                    "range": [
                                        1, 
                                        65535
                                    ]
                                }
                            ]
                        }, 
                        {
                            "type": "text", 
                            "label": "Username", 
                            "field": "proxy_username", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "maxLength": 50, 
                                    "errorMsg": "Max length of username is 50", 
                                    "minLength": 0
                                }
                            ]
                        }, 
                        {
                            "type": "text", 
                            "label": "Password", 
                            "field": "proxy_password", 
                            "encrypted": true, 
                            "validators": [
                                {
                                    "type": "string", 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of password is 8192", 
                                    "minLength": 0
                                }
                            ]
                        }, 
                        {
                            "type": "checkbox", 
                            "label": "Remote DNS resolution", 
                            "field": "proxy_rdns"
                        }
                    ], 
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }, 
                    "name": "proxy", 
                    "title": "Proxy"
                }, 
                {
                    "entity": [
                        {
                            "type": "singleSelect", 
                            "label": "Log level", 
                            "defaultValue": "INFO", 
                            "field": "loglevel", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "value": "DEBUG", 
                                        "label": "DEBUG"
                                    }, 
                                    {
                                        "value": "INFO", 
                                        "label": "INFO"
                                    }, 
                                    {
                                        "value": "WARNING", 
                                        "label": "WARNING"
                                    }, 
                                    {
                                        "value": "ERROR", 
                                        "label": "ERROR"
                                    }, 
                                    {
                                        "value": "CRITICAL", 
                                        "label": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }
                        }
                    ], 
                    "name": "logging", 
                    "title": "Logging"
                }, 
                {
                    "entity": [
                        {
                            "type": "text", 
                            "label": "API Key", 
                            "defaultValue": "", 
                            "required": true, 
                            "validators": [
                                {
                                    "type": "string", 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0
                                }
                            ], 
                            "field": "api_key", 
                            "help": "Enter your API key provided by Security Trails"
                        }, 
                        {
                            "type": "text", 
                            "label": "Index", 
                            "defaultValue": "main", 
                            "required": true, 
                            "validators": [
                                {
                                    "type": "string", 
                                    "maxLength": 8192, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0
                                }
                            ], 
                            "field": "index", 
                            "help": "Enter index name where results will stored"
                        }
                    ], 
                    "name": "additional_parameters", 
                    "title": "Add-on Settings"
                }
            ], 
            "description": "Set up your add-on", 
            "title": "Configuration"
        }
    }, 
    "meta": {
        "apiVersion": "3.0.0", 
        "version": "1.1.0", 
        "displayName": "SecurityTrails Add-On For Splunk", 
        "restRoot": "TA_securitytrails", 
        "name": "TA-securitytrails"
    }
}